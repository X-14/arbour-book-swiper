    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/index.html"
      },
      {
        "source": "/preferences",
        "destination": "/preferences.html"
      },
      {
        "source": "/homepage",
        "destination": "/homepage.html"
      },
      {
        "source": "/recommendation",
        "destination": "/recommendation.html"
      },
      {
        "source": "/liked",
        "destination": "/liked.html"
      },
      {
        "source": "/search",
